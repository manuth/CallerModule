{
  "name": "@manuth/caller-module",
  "version": "1.0.6",
  "description": "Provides information about the caller of a method and its module",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "license": "MIT",
  "keywords": [
    "path",
    "module",
    "root",
    "caller"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "homepage": "https://github.com/manuth/CallerModule#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/CallerModule.git"
  },
  "bugs": {
    "url": "https://github.com/manuth/CallerModule/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "npm run build -- --watch",
    "clean": "npm run build -- --clean && rimraf ./lib",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./src .eslintrc.js",
    "lint-ide": "npm run lint || exit 0",
    "test": "mocha",
    "prepare": "npm run rebuild"
  },
  "dependencies": {
    "@manuth/package-json-editor": "^1.4.3",
    "@types/callsite": "^1.0.30",
    "pkg-up": "^3.1.0",
    "upath": "^2.0.1",
    "v8-callsites": "^1.2.1"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^2.3.6",
    "@manuth/tsconfig": "^1.2.7",
    "@manuth/typescript-eslint-plugin": "^1.3.3",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.18.0",
    "eslint-plugin-deprecation": "^1.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^31.0.5",
    "mocha": "^8.2.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
